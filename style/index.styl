setup-widget__down-arrow()

@import '@redsift/ui-rs-hero/src/index.import.styl'

logoSize = 28px
iconSize = 128px

html,
body {
    min-width: 350px;
}

#summary {
    img.status {
        width: iconSize;
        height: iconSize;
    }
}

div.hero {
    height: 100vh;
}

div.hero > svg.background {
    position: absolute;
    top: 0px;
    left: 0px;
    bottom: 0px;
    right: 0px;    
    z-index: -1;
}

div.hero > img.hero__icon {
    position: absolute;
    top: 2.3em;
    left: 1.5em;
    z-index: 99;    
    width: logoSize;
    height: logoSize;
}

